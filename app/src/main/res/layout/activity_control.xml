<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhiệt độ hiện tại: --°C"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="32dp" />

    <Button
        android:id="@+id/btn_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bật/Tắt"
        app:layout_constraintTop_toBottomOf="@id/tv_current_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="32dp" />

    <Button
        android:id="@+id/btn_temp_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tăng Nhiệt"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp" />

    <Button
        android:id="@+id/btn_temp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giảm Nhiệt"
        app:layout_constraintTop_toBottomOf="@id/btn_temp_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
